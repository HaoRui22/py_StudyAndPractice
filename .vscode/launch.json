{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Current File (root cwd)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run as Module",
      "type": "debugpy",
      "request": "launch",
      "module": "${relativeFileDirname}/${fileBasenameNoExtension}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
